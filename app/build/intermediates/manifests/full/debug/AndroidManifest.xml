    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/SpeahMaster"
        android:theme="@style/AppTheme" >
        <activity
            android:name="be.tarsos.tarsos.dsp.android.ui.TarsosDSPActivity"
            android:label="@string/SpeahMaster" >
        </activity>
        <activity
            android:name="be.tarsos.tarsos.dsp.android.ui.PitchDetectionActivity"
            android:label="@string/SpeahMaster" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.tarsos.tarsos.dsp.android.ui.First"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="be.tarsos.tarsos.dsp.android.ui.Second"
            android:label="@string/app_name" >
